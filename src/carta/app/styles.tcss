/* Shared styles for Carta screens */

#output {
    height: 1fr;
    border: solid $primary;
    margin: 0 1;
}

#input-container {
    height: 3;
    dock: bottom;
    border: solid $primary;
    margin: 0 1 1 1;
    padding: 0 1;
}

#user-input {
    border: none;
    padding: 0;
}

#loading {
    dock: bottom;
    height: 1;
    margin: 0 2;
}

#loading.hidden {
    display: none;
}
